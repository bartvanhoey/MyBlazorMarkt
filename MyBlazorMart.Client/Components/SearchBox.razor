@inherits SearchBoxBase

<div class="search">
  <form @onsubmit=AddItem>
    <input type="search" placeholder="Scan or search" list="products-autocomplete" value="@searchText" @oninput="UpdateAutoComplete" />
  </form>
  <datalist id="products-autocomplete">
    @foreach (var item in autocompleteItems)
    {
      <option>@item.Name</option>
    }
  </datalist>
</div>



