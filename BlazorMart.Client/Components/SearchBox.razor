@inherits SearchBoxBase 

<div class="search">
  <form @onsubmit="AddItemAsync">
    <input type="search" placeholder="Scan or search" list="products-autocomplete" value="@searchText" @oninput="UpdateAutoCompleteAsync" >
  </form>
  <datalist id="products-autocomplete">
    @foreach (var item in autocompleteItems)
    {
        <option>@item.Name</option>
    }
  </datalist>
</div>